  {{> header}}
  <div class="row event-details">
    <div class="col-md-12 text-center overflow-hidden">

      <img class="details-img"
        src="{{image}}" />
      <div class="my-3 p-3">
        <h2 class="display-5">{{event}}</h2>
        <p class="infoType">Description:</p>
        <p class="event-description">{{description}}</p>
        <p class="infoType">Date: <small>{{date}}</small></p>
        <p class="infoType">Peope interested in: <small>{{joined}}</small></p>
        <p class="infoType">Organizer: <small>{{author}}</small></p>
      </div>
      {{#if isAuthor}}
      <a href="#" class="btn btn-primary btn-lg">Edit the event</a>
      <a href="#" class="btn btn-danger btn-lg">Close the event</a>
      {{else}}
      <a href="#/join/:{{id}}" class="btn btn-info btn-lg">Join the event</a>
      {{/if}}
    </div>
  </div>
  {{> footer}}