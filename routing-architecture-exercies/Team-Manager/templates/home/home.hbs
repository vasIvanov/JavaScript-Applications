<div class="container">

    {{> header}}
    <div>
        <h2>Home Page</h2>
        {{#if loggedIn}}
            {{#if hasTeam}}
                <a href="#/catalog/:{{teamId}}">Go To Team</a>
            {{else}}
                <p>You are currently not a member of a team. View the <a href="#/catalog">catalog</a> to join or create one.</p>
            {{/if}}
        {{else}}
            <p>You are currently not logged in. <a href="#/login"><button type="button" class="btn btn-outline-primary">Log in</button></a> / <a href="#/register"><button type="button" class="btn btn-outline-primary">Register</button></a></p>
        {{/if}}
    </div>
</div>

{{> footer}}